{
    "compilerOptions": {
        // "allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitReturns": true,
		"outDir": "./build",
		"resolveJsonModule": true,
		"strict": true,
		// babel handles transpiling to browser-accepted js
		"target": "esnext",
	},
	"exclude": [
		"client",
		"build",
		"dist"
	]
}