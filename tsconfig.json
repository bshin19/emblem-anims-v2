{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDeclarationOnly": true,
		"noImplicitReturns": true,
		"outDir": "./build",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"exclude": ["client", "build", "dist", "node_modules"]
}
